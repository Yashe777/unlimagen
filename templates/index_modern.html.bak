    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background: #0a0a0a;
            color: #ffffff;
        }

        .top-bar {
            background: #1a1a1a;
            color: white;
            padding: 15px 40px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            font-size: 24px;
            font-weight: bold;
            cursor: pointer;
            transition: opacity 0.3s;
        }

        .logo:hover {
            opacity: 0.8;
        }

        .main-nav {
            display: flex;
            gap: 30px;
            align-items: center;
        }

        .nav-link {
            color: #ffffff;
            text-decoration: none;
            font-size: 15px;
            font-weight: 500;
            transition: color 0.3s;
            padding: 8px 12px;
        }

        .nav-link:hover {
            color: #D4D4DF;
        }

        .nav-dropdown {
            position: relative;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background: #2a2a2a;
            min-width: 200px;
            box-shadow: 0 8px 16px rgba(0,0,0,0.3);
            border-radius: 8px;
            padding: 10px 0;
            top: 100%;
            left: 0;
            z-index: 1000;
        }

        .dropdown-content a {
            color: #ffffff;
            padding: 12px 20px;
            text-decoration: none;
            display: block;
            font-size: 14px;
            transition: background 0.3s;
        }

        .dropdown-content a:hover {
            background: #3a3a3a;
            color: #D4D4DF;
        }

        .nav-dropdown:hover .dropdown-content {
            display: block;
        }

        @media (max-width: 768px) {
            .main-nav {
                display: none;
            }
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 80px 20px 40px;
            background: #0a0a0a;
        }

        .main-content {
            display: grid;
            grid-template-columns: 380px 1fr 180px;
            gap: 25px;
            margin-top: 30px;
        }

        .sidebar {
            position: sticky;
            top: 20px;
            height: fit-content;
        }

        .main-area {
            min-height: 400px;
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        @media (max-width: 1024px) {
            .main-area {
                display: contents;
            }
        }

        .input-card {
            background: #1a1a1a;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.5);
            border: 1px solid #2a2a2a;
        }

        .input-card-title {
            font-size: 18px;
            font-weight: 700;
            color: #ffffff;
            margin-bottom: 15px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .results-card {
            background: #1a1a1a;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.5);
            border: 1px solid #2a2a2a;
            flex: 1;
            min-height: 500px;
        }

        .header-section {
            text-align: center;
            margin-bottom: 50px;
        }

        .top-animated-banner {
            background: #ffffff;
            padding: 6px 0;
            overflow: hidden;
            box-shadow: 0 1px 5px rgba(0,0,0,0.08);
            position: relative;
        }

        .top-scrolling-text {
            display: flex;
            white-space: nowrap;
            animation: scroll 30s linear infinite;
        }

        .top-scrolling-text span {
            font-size: 12px;
            font-weight: 600;
            color: #1a1a1a;
            padding: 0 40px;
            display: inline-block;
            letter-spacing: 0.3px;
        }

        @keyframes scroll {
            0% {
                transform: translateX(0);
            }
            100% {
                transform: translateX(-50%);
            }
        }

        .input-bar {
            max-width: 800px;
            margin: 0 auto 40px;
            position: relative;
        }

        .main-input {
            width: 100%;
            padding: 15px;
            font-size: 15px;
            border: 2px solid #3a3a3a;
            border-radius: 10px;
            outline: none;
            transition: border-color 0.3s;
            font-family: inherit;
            resize: vertical;
            background: #2a2a2a;
            color: #ffffff;
        }

        .main-input:focus {
            border-color: #D4D4DF;
            box-shadow: 0 3px 15px rgba(212, 212, 223, 0.3);
        }

        .main-input::placeholder {
            color: #888;
        }

        .generate-btn {
            width: 100%;
            margin-top: 12px;
            padding: 14px 30px;
            background: linear-gradient(135deg, #ffffff 0%, #D4D4DF 100%);
            color: #1a1a1a;
            border: none;
            border-radius: 10px;
            font-size: 15px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s;
        }

        .generate-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(212, 212, 223, 0.6);
        }

        .generate-btn:disabled {
            background: #ccc;
            cursor: not-allowed;
        }

        .options-section {
            background: #1a1a1a;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.5);
            border: 1px solid #2a2a2a;
        }

        .filter-bar-title {
            font-size: 16px;
            font-weight: 700;
            color: #ffffff;
            margin-bottom: 15px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .filters-grid {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .option-group {
            background: #2a2a2a;
            padding: 15px;
            border-radius: 10px;
            border: 1px solid #3a3a3a;
        }

        .option-group label {
            display: block;
            font-size: 12px;
            font-weight: 700;
            color: #a0a0a0;
            margin-bottom: 10px;
            text-transform: uppercase;
            letter-spacing: 0.8px;
        }

        .option-group select {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            font-size: 15px;
            cursor: pointer;
            background: white;
            transition: border-color 0.2s ease;
        }

        .option-group select:focus {
            outline: none;
            border-color: #D4D4DF;
            box-shadow: 0 0 0 3px rgba(212, 212, 223, 0.2);
        }

        .option-group select:hover {
            border-color: #D4D4DF;
        }

        .radio-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 8px;
            max-height: 350px;
            overflow-y: auto;
            padding: 3px;
        }

        .radio-grid.aspect-ratio-grid {
            grid-template-columns: repeat(1, 1fr);
            max-height: none;
            overflow-y: visible;
        }

        .radio-option {
            position: relative;
        }

        .radio-option input[type="radio"] {
            display: none;
        }

        .radio-option label {
            display: block;
            padding: 10px 12px;
            background: #1a1a1a;
            border: 2px solid #3a3a3a;
            border-radius: 8px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s;
            font-size: 11px;
            font-weight: 600;
            color: #ffffff;
            text-transform: none;
            letter-spacing: normal;
            margin: 0;
        }

        .radio-option label:hover {
            border-color: #D4D4DF;
            background: #2a2a2a;
        }

        .radio-option input[type="radio"]:checked + label {
            background: linear-gradient(135deg, #ffffff 0%, #D4D4DF 100%);
            color: #1a1a1a;
            border-color: #D4D4DF;
            font-weight: 700;
        }

        .loading {
            display: none;
            text-align: center;
            padding: 60px 20px;
        }

        .spinner {
            width: 50px;
            height: 50px;
            border: 4px solid #333;
            border-top-color: #D4D4DF;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 0 auto 20px;
        }

        @keyframes spin {
            to { transform: rotate(360deg); }
        }

        .loading-text {
            font-size: 18px;
            color: #a0a0a0;
        }

        .results {
            display: none;
        }

        .results-header {
            text-align: center;
            margin-bottom: 40px;
        }

        .results-header h2 {
            font-size: 32px;
            font-weight: 700;
            color: #ffffff;
            margin-bottom: 10px;
        }

        .results-header p {
            font-size: 16px;
            color: #a0a0a0;
        }

        .logo-grid {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 60px;
        }

        .logo-card {
            background: #2a2a2a;
            border: 1px solid #3a3a3a;
            border-radius: 16px;
            overflow: hidden;
            transition: transform 0.3s, box-shadow 0.3s;
            max-width: 500px;
            width: 100%;
            margin: 0 auto;
        }

        .logo-card:hover {
            box-shadow: 0 10px 30px rgba(212, 212, 223, 0.3);
        }

        .logo-preview {
            width: 100%;
            height: auto;
            min-height: 350px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #1a1a1a;
            padding: 20px;
        }

        .logo-preview img {
            width: 100%;
            height: auto;
            max-height: 450px;
            object-fit: contain;
            border-radius: 8px;
        }

        .logo-info {
            padding: 30px;
            border-top: 1px solid #3a3a3a;
        }

        .logo-actions {
            display: flex;
            justify-content: center;
        }

        .btn-download {
            padding: 16px 50px;
            background: linear-gradient(135deg, #ffffff 0%, #D4D4DF 100%);
            color: #1a1a1a;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s;
        }

        .btn-download:hover {
            box-shadow: 0 4px 15px rgba(212, 212, 223, 0.6);
            transform: translateY(-2px);
        }

        .footer {
            background: #1a1a1a;
            color: #ccc;
            padding: 40px 20px 20px;
            margin-top: 60px;
            border-top: 4px solid #D4D4DF;
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 30px;
            margin-bottom: 30px;
        }

        .footer-section h3 {
            color: #fff;
            font-size: 16px;
            margin-bottom: 15px;
            font-weight: 600;
        }

        .footer-links {
            list-style: none;
        }

        .footer-links li {
            margin-bottom: 10px;
        }

        .footer-links a {
            color: #ccc;
            text-decoration: none;
            transition: color 0.3s;
            font-size: 14px;
        }

        .footer-links a:hover {
            color: #D4D4DF;
        }

        .footer-bottom {
            text-align: center;
            padding-top: 20px;
            border-top: 1px solid #333;
            color: #999;
            font-size: 14px;
        }

        .model-selector {
            margin-bottom: 20px;
            padding: 20px;
            background: #1a1a1a;
            border-radius: 12px;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.5);
            border: 1px solid #2a2a2a;
        }

        .sidebar-title {
            font-size: 16px;
            font-weight: 700;
            color: #ffffff;
            margin-bottom: 15px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .model-options {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .model-option {
            padding: 15px;
            background: #2a2a2a;
            border: 2px solid #3a3a3a;
            border-radius: 10px;
            text-align: left;
            cursor: pointer;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .model-option:hover {
            border-color: #D4D4DF;
            background: #333;
            transform: translateX(3px);
        }

        .model-option.selected {
            background: linear-gradient(135deg, #ffffff 0%, #D4D4DF 100%);
            border-color: #D4D4DF;
        }

        .model-option.selected .model-name {
            color: #1a1a1a;
        }


        .model-option input[type="radio"] {
            display: none;
        }

        .model-name {
            font-weight: 600;
            color: #ffffff;
            font-size: 14px;
            flex: 1;
        }

        .model-desc {
            font-size: 13px;
            color: #666;
        }

        .ad-sidebar {
            position: sticky;
            top: 20px;
            height: fit-content;
        }

        .ad-space {
            /* Empty space for ads - no background or borders */
            margin-bottom: 20px;
            min-height: 250px;
        }

        @media (max-width: 1400px) {
            .main-content {
                grid-template-columns: 340px 1fr 160px;
                gap: 20px;
            }
        }

        @media (max-width: 1200px) {
            .main-content {
                grid-template-columns: 300px 1fr;
                gap: 20px;
            }

            .ad-sidebar {
                display: none;
            }
        }

        @media (max-width: 1024px) {
            .main-content {
                grid-template-columns: 1fr;
                display: flex;
                flex-direction: column;
            }

            .sidebar {
                position: relative;
                top: 0;
                order: 2;
            }

            .main-area {
                order: 1;
            }

            .input-card {
                order: 1;
            }

            .results-card {
                order: 3;
            }

            .radio-grid {
                grid-template-columns: repeat(3, 1fr);
            }

            .radio-grid.aspect-ratio-grid {
                grid-template-columns: repeat(3, 1fr);
            }
        }

        @media (max-width: 768px) {
            .header-section h1 {
                font-size: 32px;
            }

            .main-input {
                padding: 18px 20px;
            }

            .generate-btn {
                position: relative;
                right: auto;
                top: auto;
                width: 100%;
                margin-top: 15px;
            }

            .radio-grid {
                grid-template-columns: repeat(2, 1fr);
            }

            .radio-grid.aspect-ratio-grid {
                grid-template-columns: repeat(1, 1fr);
            }

            .logo-grid {
                grid-template-columns: 1fr;
            }

            .model-options {
                flex-direction: column;
            }
        }

        /* Rating Section Mobile */
        @media (max-width: 768px) {
            section[style*="padding: 60px"] {
                padding: 40px 15px !important;
            }
            
            div[style*="grid-template-columns: 1fr 1fr"] {
                grid-template-columns: 1fr !important;
            }

            #reviews-row {
                gap: 5px !important;
                overflow-x: auto !important;
            }

            #reviews-container {
                gap: 5px !important;
                min-width: 0 !important;
            }

            #reviews-container > div {
                min-width: 70px !important;
            }

            #more-reviews {
                padding: 8px 10px !important;
                flex-shrink: 0 !important;
            }

            #more-reviews > div:first-child {
                font-size: 12px !important;
            }
        }
    </style>
</head>
