    <script>
        const companyInput = document.getElementById('company-name');
        const generateBtn = document.getElementById('generate-btn');
        const styleSelect = document.getElementById('style');
        const colorSelect = document.getElementById('color-scheme');
        const industrySelect = document.getElementById('industry');
        const loading = document.getElementById('loading');
        const results = document.getElementById('results');
        const logoGrid = document.getElementById('logo-grid');

        // Model selection handling
        document.querySelectorAll('.model-option-bar').forEach(bar => {
            bar.addEventListener('click', function() {
                // Get the radio button
                const radio = this.querySelector('input[type="radio"]');
                if (radio) {
                    radio.checked = true;
                }
                
                // Reset all bars to default dark style
                document.querySelectorAll('.model-option-bar').forEach(b => {
                    b.style.background = '#1a1a1a';
                    b.style.border = '2px solid #444444';
                    b.style.boxShadow = 'none';
                    const label = b.querySelector('label');
                    if (label) {
                        label.style.color = '#ffffff';
                    }
                });
                
                // Apply metallic light white to selected
                this.style.background = 'linear-gradient(135deg, #e0e7ff 0%, #f8fafc 100%)';
                this.style.border = '2px solid #cbd5e1';
                this.style.boxShadow = '0 4px 12px rgba(255, 255, 255, 0.5), inset 0 1px 3px rgba(255, 255, 255, 0.8)';
                const label = this.querySelector('label');
                if (label) {
                    label.style.color = '#1e293b';
                }
            });
        });

        // Show limit reached modal
        function showLimitModal() {
            const modal = document.createElement('div');
            modal.style.cssText = 'position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.8); display: flex; justify-content: center; align-items: center; z-index: 10000;';
            
            modal.innerHTML = `
                <div style="background: linear-gradient(135deg, #2a2a2a 0%, #1a1a1a 100%); padding: 50px 40px; border-radius: 20px; max-width: 500px; text-align: center; border: 2px solid #e0e7ff; box-shadow: 0 10px 40px rgba(224, 231, 255, 0.3);">
                    <div style="font-size: 64px; margin-bottom: 20px;">‚ö†Ô∏è</div>
                    <h2 style="font-size: 32px; margin-bottom: 20px; color: #ffffff;">Daily Limit Reached!</h2>
                    <p style="font-size: 18px; color: #aaaaaa; margin-bottom: 30px;">
                        You've used all your free images for today.<br>
                        Upgrade to generate more images!
                    </p>
                    <div style="margin: 30px 0; padding: 20px; background: #1a1a1a; border-radius: 10px; border: 1px solid #444;">
                        <div style="font-size: 14px; color: #888; margin-bottom: 10px;">Current Plan:</div>
                        <div style="font-size: 24px; font-weight: 700; color: #ffffff;">FREE - 10 images/day</div>
                    </div>
                    <a href="/pricing" style="display: inline-block; padding: 18px 40px; background: linear-gradient(135deg, #e0e7ff 0%, #f8fafc 100%); color: #1e293b; border-radius: 10px; text-decoration: none; font-weight: 700; font-size: 18px; margin: 10px;">
                        View Pricing Plans ‚Üí
                    </a>
                    <button onclick="this.closest('div').parentElement.remove()" style="display: block; margin: 20px auto 0; padding: 12px 30px; background: transparent; color: #aaaaaa; border: none; cursor: pointer; font-size: 16px;">
                        Close
                    </button>
                </div>
            `;
            
            document.body.appendChild(modal);
        }

        // Image type selection handling
        document.querySelectorAll('.image-style-bar').forEach(bar => {
            bar.addEventListener('click', function() {
                // Get the radio button
                const radio = this.querySelector('input[type="radio"]');
                if (radio) {
                    radio.checked = true;
                }
                
                // Reset all style bars to default dark style
                document.querySelectorAll('.image-style-bar').forEach(b => {
                    b.style.background = '#1a1a1a';
                    b.style.border = '2px solid #444444';
                    b.style.boxShadow = 'none';
                    const label = b.querySelector('label');
                    if (label) {
                        label.style.color = '#ffffff';
                    }
                });
                
                // Apply metallic light white to selected
                this.style.background = 'linear-gradient(135deg, #e0e7ff 0%, #f8fafc 100%)';
                this.style.border = '2px solid #cbd5e1';
                this.style.boxShadow = '0 4px 12px rgba(255, 255, 255, 0.5), inset 0 1px 3px rgba(255, 255, 255, 0.8)';
                const label = this.querySelector('label');
                if (label) {
                    label.style.color = '#1e293b';
                }
            });
        });

        // Generate on button click
        generateBtn.addEventListener('click', generateLogos);

        // Generate on Enter key
        companyInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                generateLogos();
            }
        });

        async function generateLogos() {
            const userPrompt = companyInput.value.trim();

            if (!userPrompt) {
                companyInput.focus();
                companyInput.style.borderColor = '#f44336';
                setTimeout(() => {
                    companyInput.style.borderColor = '#e0e0e0';
                }, 2000);
                return;
            }

            const model = document.querySelector('input[name="model"]:checked').value;
            const imageType = document.querySelector('input[name="image-type"]:checked').value;

            // Add style keywords based on selected type (only standard types that work well)
            let enhancedPrompt = userPrompt;
            
            if (imageType === 'realistic') {
                enhancedPrompt += ", photorealistic, detailed, high quality, professional photography";
            } else if (imageType === 'digital-art') {
                enhancedPrompt += ", digital art, artistic, creative, vibrant colors, high quality";
            } else if (imageType === 'illustration') {
                enhancedPrompt += ", illustration style, hand-drawn, artistic, detailed";
            } else if (imageType === 'painting') {
                enhancedPrompt += ", oil painting style, artistic painting, brushstrokes, canvas texture, traditional art";
            } else if (imageType === '3d') {
                enhancedPrompt += ", 3d render, realistic rendering, detailed 3d model, high quality";
            }

            const requestData = {
                company_name: enhancedPrompt,  // Send enhanced prompt
                industry: '',
                style: imageType,
                color_scheme: '',
                background: '',
                count: 1,
                model: model
            };

            // Show loading and hide empty state
            document.getElementById('empty-state').style.display = 'none';
            results.style.display = 'none';
            loading.style.display = 'block';
            generateBtn.disabled = true;

            // On mobile, scroll to results card
            if (window.innerWidth <= 768) {
                setTimeout(() => {
                    document.querySelector('.results-card').scrollIntoView({ 
                        behavior: 'smooth', 
                        block: 'start' 
                    });
                }, 300);
            }

            try {
                const response = await fetch('/generate-free-ai', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(requestData)
                });

                const data = await response.json();

                if (data.success) {
                    displayLogos(data.logos);
                } else {
                    // Check if it's a limit error
                    if (data.limit_reached) {
                        showLimitModal();
                    } else {
                        alert('Failed to generate images. Please try again.');
                    }
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred. Please try again.');
            } finally {
                loading.style.display = 'none';
                generateBtn.disabled = false;
            }
        }

        function displayLogos(logos) {
            logoGrid.innerHTML = '';

            logos.forEach(logo => {
                const card = document.createElement('div');
                card.className = 'logo-card';

                card.innerHTML = `
                    <div class="logo-preview">
                        <img src="${logo.url}" alt="AI generated image">
                    </div>
                    <div class="logo-info">
                        <div class="logo-actions">
                            <button class="btn-download" onclick="downloadLogo('${logo.url}', '${logo.company_name}')">
                                Download Image
                            </button>
                        </div>
                    </div>
                `;

                logoGrid.appendChild(card);
            });

            results.style.display = 'block';
            results.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }

        function downloadLogo(url, companyName) {
            const a = document.createElement('a');
            a.href = url;
            a.download = `AI_generated_image_${Date.now()}.png`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
        }
        // ===== RATING SYSTEM =====
        let selectedRating = 0;
        const stars = document.querySelectorAll('.star');
        const submitBtn = document.getElementById('submit-rating');
        const ratingMessage = document.getElementById('rating-message');

        // Star rating interaction
        stars.forEach(star => {
            star.addEventListener('click', function() {
                selectedRating = parseInt(this.dataset.rating);
                updateStars(selectedRating);
                // Show rating form when stars are clicked
                document.getElementById('rating-form').style.display = 'block';
            });

            star.addEventListener('mouseover', function() {
                const rating = parseInt(this.dataset.rating);
                updateStars(rating);
            });
        });

        document.getElementById('star-rating').addEventListener('mouseleave', function() {
            updateStars(selectedRating);
        });

        function updateStars(rating) {
            stars.forEach((star, index) => {
                if (index < rating) {
                    star.textContent = '‚òÖ';
                    star.style.color = '#FFD700';
                } else {
                    star.textContent = '‚òÜ';
                    star.style.color = '#666';
                }
            });
        }

        // Submit rating
        submitBtn.addEventListener('click', function() {
            if (selectedRating === 0) {
                ratingMessage.style.color = '#f44336';
                ratingMessage.textContent = 'Please select a star rating!';
                ratingMessage.style.display = 'block';
                return;
            }

            const reviewerName = document.getElementById('reviewer-name').value || 'Anonymous';

            // Get existing reviews from localStorage
            let reviews = JSON.parse(localStorage.getItem('unlimagen_reviews') || '[]');
            
            // Add new review
            const newReview = {
                rating: selectedRating,
                name: reviewerName,
                date: new Date().toISOString()
            };
            
            reviews.unshift(newReview);
            
            // Keep only last 50 reviews
            if (reviews.length > 50) {
                reviews = reviews.slice(0, 50);
            }
            
            localStorage.setItem('unlimagen_reviews', JSON.stringify(reviews));

            // Show success message
            ratingMessage.style.color = '#4CAF50';
            ratingMessage.textContent = '‚úÖ Thank you for your feedback!';
            ratingMessage.style.display = 'block';

            // Reset form
            selectedRating = 0;
            updateStars(0);
            document.getElementById('reviewer-name').value = '';
            document.getElementById('rating-form').style.display = 'none';

            // Update display
            updateRatingDisplay();
            loadReviews();

            // Hide message after 3 seconds
            setTimeout(() => {
                ratingMessage.style.display = 'none';
            }, 3000);
        });

        // Load and display reviews
        function loadReviews() {
            const reviews = JSON.parse(localStorage.getItem('unlimagen_reviews') || '[]');
            const container = document.getElementById('reviews-container');
            
            if (reviews.length === 0) {
                container.innerHTML = `
                    <div style="grid-column: 1/-1; text-align: center; padding: 40px; color: #666;">
                        <p style="font-size: 18px;">No reviews yet. Be the first to leave a review! ‚≠ê</p>
                    </div>
                `;
                return;
            }

            // Show only 3 latest reviews
            const latestReviews = reviews.slice(0, 3);
            container.innerHTML = latestReviews.map(review => {
                const stars = '‚òÖ'.repeat(review.rating);
                return `
                    <div style="flex: 1; background: #2a2a2a; padding: 8px 10px; border-radius: 6px; border: 1px solid #3a3a3a;">
                        <div style="color: #ffffff; font-size: 11px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                            <span style="color: #a0a0a0; font-weight: 500;">${escapeHtml(review.name)}:</span>
                            <span style="color: #FFD700; margin-left: 4px;">${stars}</span>
                        </div>
                    </div>
                `;
            }).join('');
            
            // Update "more" count
            const moreCount = reviews.length > 3 ? reviews.length - 3 : 0;
            const moreDisplay = moreCount >= 1000 ? (moreCount / 1000).toFixed(1) + 'k' : moreCount;
            document.getElementById('more-count').textContent = moreDisplay || '0';
        }

        // Update rating statistics
        function updateRatingDisplay() {
            const reviews = JSON.parse(localStorage.getItem('unlimagen_reviews') || '[]');
            
            if (reviews.length === 0) return;

            // Calculate average
            const sum = reviews.reduce((acc, r) => acc + r.rating, 0);
            const avg = (sum / reviews.length).toFixed(1);
            
            document.getElementById('avg-rating-display').textContent = avg;
            document.getElementById('total-ratings').textContent = reviews.length;
        }

        function getTimeAgo(date) {
            const seconds = Math.floor((new Date() - date) / 1000);
            
            if (seconds < 60) return 'Just now';
            if (seconds < 3600) return Math.floor(seconds / 60) + ' minutes ago';
            if (seconds < 86400) return Math.floor(seconds / 3600) + ' hours ago';
            if (seconds < 604800) return Math.floor(seconds / 86400) + ' days ago';
            return Math.floor(seconds / 604800) + ' weeks ago';
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        // Load reviews on page load
        document.addEventListener('DOMContentLoaded', function() {
            loadReviews();
            updateRatingDisplay();
        });

    </script>
